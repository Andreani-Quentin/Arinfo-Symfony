{% extends 'base.html.twig' %}

{% block title %}Bar{% endblock %}

{% block body %}
    <h1>Bar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ bar.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bar.description }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ bar.adress }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ bar.city.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ bar.createdAt ? bar.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('review/_form.html.twig') }}


    {% if app.user %}
    <div class="text-right">
        <a href="{{ path('bar_index') }}">back to list</a>
        <a href="{{ path('bar_edit', {'id': bar.id}) }}">edit</a>
        {{ include('bar/_delete_form.html.twig') }}
    </div>
    {% endif %}

    
{% endblock %}
